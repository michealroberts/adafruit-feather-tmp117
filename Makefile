#/*************************************************************************************/

# Test the application
test:
	@echo "Testing..."
	@tinygo test -v ./... 

#/*************************************************************************************/

# Format the application code
format:
	@echo "Formatting..."
	@go fmt ./...

#/*************************************************************************************/

# Vet the application code
vet:
	@echo "Vetting..."
	@go vet ./...

#/*************************************************************************************/

# Lint the application code
lint:
	@echo "Linting..."
	@staticcheck ./...

#/*************************************************************************************/

# Run GoCritic
critic: 
	@echo "Running Critic..."
	@gocritic check ./...

#/*************************************************************************************/

# Clean the binary file
clean:
	@echo "Cleaning..."
	@rm -f main

#/*************************************************************************************/

.PHONY: all build run test clean

#/*************************************************************************************/
